<h2>Dashboard Messages</h2>
<span><%= link "New Broadcast", class: "btn btn-primary", to: broadcast_path(@conn, :new) %></span>

<div class="container">

    <table id="broadcast-index-container" class="table">
      <thead>
        <tr>
          <th>Desc</th>

          <th>Id</th>
        </tr>
      </thead>
      <tbody>
        <%= for b <- @broadcasts do %>
        <tr>
          <td><%= b.desc %></td>
          <td><%= b.user_id %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
</div>
